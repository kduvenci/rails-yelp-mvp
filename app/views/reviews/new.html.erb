<div class="container">
  <h1>Create Review</h1>
  <%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: %w(0 1 2 3 4 5) %>
  <%= f.submit "Save", class: "btn btn-success" %>
  <% end %>
  <br>
  <%= link_to '<< Cancel', restaurant_path(@restaurant), class:"btn btn-primary" %>
</div>